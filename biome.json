{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "include": [
      "**/*"
    ],
    "ignore": [
      "**/node_modules/**",
      "**/.next/**",
      "**/.turbo/**",
      "**/dist/**",
      "**/build/**",
      "backups/**",
      "public/**",
      "generated/**",
      "convex/_generated/**",
      "react-email-starter/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true
  }
}
{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"node_modules/**",
			".next/**",
			"dist/**",
			"build/**",
			"coverage/**",
			".vercel/**",
			"convex/_generated/**",
			"generated/**",
			"*.min.js",
			"*.min.css",
			".github/**",
			".husky/**",
			"src/components/ui/**",
			"*.config.ts",
			"*.config.js",
			"*.config.mjs",
			"backups/**",
			"app/styles/_generated_tokens.css",
			"public/sw.js",
			"public/workbox-*.js"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"correctness": {
				"noUnusedImports": "error",
				"noUndeclaredVariables": "error",
				"noConstAssign": "error",
				"noInvalidConstructorSuper": "error",
				"noUnsafeOptionalChaining": "error",
				"useExhaustiveDependencies": "error",
				"useIsNan": "error",
				"useValidForDirection": "error"
			},
			"suspicious": {
				"noConsoleLog": "off",
				"noExplicitAny": "off",
				"noDoubleEquals": "error",
				"useAwait": "error"
			},
			"security": {
				"noDangerouslySetInnerHtml": "error",
				"noDangerouslySetInnerHtmlWithChildren": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "es5",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"quoteProperties": "asNeeded",
			"attributePosition": "auto"
		}
	},
	"overrides": [
		{
			"include": ["app/layout.tsx"],
			"linter": {
				"rules": {
					"security": {
						"noDangerouslySetInnerHtml": "off"
					}
				}
			}
		}
	]
}
