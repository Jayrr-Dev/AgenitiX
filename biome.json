{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules/**",
			".next/**",
			"dist/**",
			"build/**",
			"coverage/**",
			".vercel/**",
			"convex/_generated/**",
			"generated/**",
			"*.min.js",
			"*.min.css"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noUnusedTemplateLiteral": "error",
				"useTemplate": "error"
			},
			"suspicious": {
				"noConsoleLog": "warn",
				"noExplicitAny": "warn"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "warn"
			},
			"correctness": {
				"noUnusedVariables": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "es5",
			"semicolons": "always"
		}
	},
	"overrides": [
		{
			"include": ["features/business-logic-modern/**/*.{ts,tsx}"],
			"linter": {
				"rules": {
					"style": {
						"noUnusedTemplateLiteral": "error"
					},
					"suspicious": {
						"noConsoleLog": "off"
					}
				}
			}
		},
		{
			"include": ["app/api/**/*.{ts,tsx}"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsoleLog": "off"
					}
				}
			}
		},
		{
			"include": ["scripts/**/*.{ts,js}"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsoleLog": "off"
					}
				}
			}
		}
	]
}
