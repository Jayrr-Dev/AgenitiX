{
  "nodeType": "{{nodeType}}",
  "version": "1.0.0",
  "category": "{{category}}",
  "displayName": "{{displayName}}",
  "description": "{{description}}",
  "icon": "Icon{{name}}",
  "ui": {
    "size": {
      "width": 240,
      "height": 120
    },
    "folder": "{{folder}}"
  },
  "handles": [
    {{#if hasInput}}
    {
      "id": "input",
      "type": "target",
      "position": "left",
      "dataType": "any",
      "label": "Input",
      "description": "Input data"
    },
    {{/if}}
    {{#if hasOutput}}
    {
      "id": "output",
      "type": "source",
      "position": "right",
      "dataType": "{{outputType}}",
      "label": "Output",
      "description": "Output data"
    }
    {{/if}}
  ],
  "data": {
    {{#ifeq controlType "text"}}
    "text": {
      "type": "string",
      "default": "",
      "label": "Text",
      "description": "The text to process or display",
      "control": {
        "type": "text"
      }
    }
    {{/ifeq}}
    {{#ifeq controlType "toggle"}}
    "enabled": {
      "type": "boolean",
      "default": true,
      "label": "Enabled",
      "description": "Toggles the node on or off",
      "control": {
        "type": "toggle"
      }
    }
    {{/ifeq}}
  }
} 