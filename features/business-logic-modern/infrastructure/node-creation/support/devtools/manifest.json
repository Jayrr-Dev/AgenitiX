{
  "manifest_version": 3,
  "name": "V2U Node System DevTools",
  "version": "1.0.0",
  "description": "Advanced development tools for V2U node system debugging, profiling, and management",

  "permissions": ["activeTab", "storage", "scripting"],

  "host_permissions": ["http://localhost:*/*", "https://localhost:*/*"],

  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "matches": ["http://localhost:*/*", "https://localhost:*/*"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "V2U DevTools",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["inject-script.js"],
      "matches": ["http://localhost:*/*", "https://localhost:*/*"]
    }
  ]
}
